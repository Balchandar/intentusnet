{
  "default": "deny",
  "rules": [
    {
      "id": "allow-enterprise-admins-everywhere",
      "action": "allow",
      "roles": ["admin"],
      "tenants": ["enterprise"],
      "intents": ["*"],
      "agents": ["*"],
      "description": "Enterprise admins get full unrestricted access"
    },
    {
      "id": "deny-trial-users-heavy-agents",
      "action": "deny",
      "tenants": ["trial"],
      "agents": ["reasoning-agent", "action-agent"],
      "description": "Trial users not allowed to use heavy compute agents"
    },
    {
      "id": "allow-premium-research-capabilities",
      "action": "allow",
      "tenants": ["premium"],
      "intents": ["ResearchIntent", "CompareIntent", "DeepSearchIntent"],
      "description": "Premium customers get deeper research stack"
    }
  ]
}
