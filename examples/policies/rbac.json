{
  "default": "deny",
  "rules": [
    {
      "id": "admin-all",
      "action": "allow",
      "roles": ["admin"],
      "intents": ["*"],
      "description": "Admins can run all intents"
    },
    {
      "id": "researcher-basic",
      "action": "allow",
      "roles": ["researcher"],
      "intents": ["ResearchIntent", "SummarizeIntent"],
      "description": "Researchers can only run research & summarization"
    },
    {
      "id": "reviewer-summary-only",
      "action": "allow",
      "roles": ["reviewer"],
      "intents": ["SummarizeIntent"],
      "description": "Reviewers can only run summarization"
    }
  ]
}
