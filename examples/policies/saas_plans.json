{
  "default": "deny",
  "rules": [
    {
      "id": "enterprise-full-access",
      "action": "allow",
      "tenants": ["enterprise"],
      "intents": ["*"],
      "description": "Enterprise customers get all capabilities"
    },
    {
      "id": "pro-tier-limitations",
      "action": "allow",
      "tenants": ["pro"],
      "intents": ["ResearchIntent", "SummarizeIntent", "CompareIntent"],
      "description": "Pro plans get most features except deep reasoning"
    },
    {
      "id": "trial-tier-minimal",
      "action": "allow",
      "tenants": ["trial"],
      "intents": ["SummarizeIntent"],
      "description": "Trial tenants can only summarize"
    }
  ]
}
