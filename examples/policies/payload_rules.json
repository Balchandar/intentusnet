{
  "default": "allow",
  "rules": [
    {
      "id": "deny-very-large-query",
      "action": "deny",
      "intents": ["ResearchIntent"],
      "description": "Prevent huge payloads",
      "priority": 100,
      "payload_regex": {
        "query": ".{2000,}"
      }
    },
    {
      "id": "deny-disallowed-keywords",
      "action": "deny",
      "intents": ["WebSearchIntent"],
      "description": "Block restricted searches",
      "payload_regex": {
        "topic": "(illegal|restricted|banned)"
      }
    }
  ]
}
