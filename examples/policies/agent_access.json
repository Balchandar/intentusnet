{
  "default": "deny",
  "rules": [
    {
      "id": "tenant-alpha-allow-only-search",
      "action": "allow",
      "tenants": ["alpha"],
      "agents": ["web-search-agent", "alt-search-agent"],
      "description": "Tenant Alpha may only use web search agents"
    },
    {
      "id": "tenant-beta-prohibit-cleaner",
      "action": "deny",
      "tenants": ["beta"],
      "agents": ["cleaner-agent"],
      "description": "Tenant Beta is prohibited from using cleaner-agent"
    },
    {
      "id": "global-allow-common-agents",
      "action": "allow",
      "agents": ["summarizer-agent", "reasoning-agent"],
      "description": "Common agents allowed for everyone"
    }
  ]
}
