{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "AgentDefinition",
  "type": "object",
  "required": ["name"],
  "additionalProperties": false,
  "properties": {
    "name": { "type": "string" },
    "version": { "type": "string", "default": "1.0" },

    "capabilities": {
      "type": "array",
      "default": [],
      "items": {
        "type": "object",
        "required": ["intent", "inputSchema", "outputSchema"],
        "additionalProperties": false,
        "properties": {
          "intent": {
            "type": "object",
            "required": ["name"],
            "additionalProperties": false,
            "properties": {
              "name": { "type": "string" },
              "version": { "type": "string", "default": "1.0" }
            }
          },
          "inputSchema": { "type": "object" },
          "outputSchema": { "type": "object" },
          "examples": {
            "type": "array",
            "items": { "type": "object" },
            "default": []
          },
          "fallbackAgents": {
            "type": "array",
            "items": { "type": "string" },
            "default": []
          },
          "priority": { "type": "integer", "default": 0 }
        }
      }
    },

    "identity": {
      "type": "object",
      "required": ["agentId"],
      "additionalProperties": false,
      "properties": {
        "agentId": { "type": "string" },
        "roles": {
          "type": "array",
          "items": { "type": "string" },
          "default": []
        },
        "signingKeyId": { "type": ["string", "null"] }
      }
    },

    "endpoint": {
      "type": "object",
      "required": ["type", "address"],
      "additionalProperties": false,
      "properties": {
        "type": { "type": "string" },
        "address": { "type": "string" }
      }
    },

    "health": {
      "type": "object",
      "required": ["status", "lastHeartbeat"],
      "additionalProperties": false,
      "properties": {
        "status": { "type": "string" },
        "lastHeartbeat": { "type": "string" }
      }
    },

    "runtime": {
      "type": "object",
      "required": ["language", "environment", "scaling"],
      "additionalProperties": false,
      "properties": {
        "language": { "type": "string" },
        "environment": { "type": "string" },
        "scaling": { "type": "string" }
      }
    }
  }
}
